<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    package="com.app.openday">

    <application
        android:allowBackup="true"
        android:icon="@mipmap/ic_launcher"
        android:label="@string/app_name"
        android:roundIcon="@mipmap/ic_launcher_round"
        android:supportsRtl="true"
        android:theme="@style/AppTheme">
        <activity android:name="com.app.openday.login.MainActivity"
            android:theme="@style/FullScreenTheme"
            android:noHistory="true">
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />
                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>

        </activity>

        <activity android:name="com.app.openday.password.PasswordActivity"
            android:theme="@style/FullScreenTheme"
            android:noHistory="true">
        </activity>

        <activity android:name="com.app.openday.mainpage.MainPageActivity"
            android:theme="@style/FullScreenTheme">
        </activity>

        <activity android:name="com.app.openday.attendance.AttendanceActivity"
            android:theme="@style/FullScreenTheme">
        </activity>

        <activity android:name="com.app.openday.broadcast.BroadcastActivity"
            android:theme="@style/FullScreenTheme">
        </activity>
    </application>

    <uses-permission android:name="android.permission.INTERNET"/>
    <uses-permission android:name="android.permission.ACCESS_NETWORK_STATE" />

</manifest>